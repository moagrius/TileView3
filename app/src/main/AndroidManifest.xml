<manifest package="com.github.moagrius.tileview3"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <application
      android:name="demo.DemoApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name="demo.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="demo.ScrollViewDemoUniversal" />
    <activity android:name="demo.ScrollViewDemoVertical" />
    <activity android:name="demo.ScrollViewDemoHorizontal" />
    <activity android:name="demo.ScalingScrollViewDemoTextViews" />
    <activity android:name="demo.ScalingScrollViewDemoTiger" />
    <activity android:name="demo.TileViewDemo"
              android:screenOrientation="locked">

    </activity>
  </application>

</manifest>
